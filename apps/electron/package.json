{
   "name": "electron",
   "version": "1.0.0",
   "description": "A template for building cross-platform desktop applications with Electron, React, and Python",
   "main": "dist/main.js",
   "scripts": {
      "dev": "cross-env NODE_ENV=development ts-node src/main.ts",
      "start": "electron .",
      "build": "tsc -p tsconfig.json && electron-builder",
      "build:ts": "tsc -p tsconfig.json",
      "build:electron": "electron-builder",
      "build:mac-arm64": "electron-builder --mac --arm64",
      "build:mac-x64": "electron-builder --mac --x64",
      "build:win": "electron-builder --win nsis --x64",
      "build:linux": "electron-builder --linux AppImage deb --x64",
      "build:all": "electron-builder --mac --win --linux"
   },
   "build": {
      "appId": "com.xfrno.electron",
      "productName": "Electron React Python Template",
      "directories": {
         "output": "release"
      },
      "asar": false,
      "asarUnpack": [
         "**/node_modules/**",
         "backend/**",
         "src/**"
      ],
      "files": [
         "dist/**/*",
         "package.json",
         "lib/**"
      ],
      "extraResources": [
         {
            "from": "../frontend/dist/",
            "to": "frontend"
         },
         {
            "from": "../backend/dist/backend_main/backend_main",
            "to": "backend/backend_main"
         },
         {
            "from": "./src/windows/license.html",
            "to": "license.html"
         },
         {
            "from": "./src/windows/splash.html",
            "to": "splash.html"
         },
         {
            "from": "./assets/icon.png",
            "to": "assets/icon.png"
         }
      ],
      "mac": {
         "category": "public.app-category.utilities",
         "target": "dmg",
         "icon": "assets/icon.icns"
      },
      "win": {
         "target": "nsis",
         "icon": "assets/icon.ico"
      },
      "linux": {
         "target": "AppImage",
         "icon": "assets/icon.png"
      }
   },
   "keywords": [
      "electron",
      "react",
      "python",
      "fastapi",
      "desktop",
      "video",
      "downloader"
   ],
   "author": "XFRNO",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/XFRNO/electron-react-python-template/issues"
   },
   "homepage": "https://github.com/XFRNO/electron-react-python-template#readme",
   "dependencies": {
      "electron-is-dev": "^2.0.0",
      "electron-store": "^10.1.0",
      "get-port": "^7.1.0"
   },
   "devDependencies": {
      "@types/electron": "^1.6.12",
      "@types/node": "^24.9.2",
      "cross-env": "^7.0.3",
      "electron": "29.4.6",
      "electron-builder": "^24.9.1",
      "htmlhint": "^1.7.1",
      "ts-node": "^10.9.2",
      "typescript": "^5.9.3",
      "wait-on": "^9.0.1"
   }
}
