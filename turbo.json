{
   "$schema": "https://turbo.build/schema.json",
   "tasks": {
      "build": {
         "dependsOn": [
            "^build"
         ],
         "outputs": [
            "dist/**",
            "build/**",
            "out/**"
         ]
      },
      "build:electron": {
         "dependsOn": [
            "frontend#build",
            "backend#build"
         ],
         "outputs": [
            "out/**",
            "dist/**"
         ]
      },
      "lint": {
         "dependsOn": [
            "^lint"
         ]
      },
      "check-types": {
         "dependsOn": [
            "^check-types"
         ]
      },
      "dev": {
         "cache": false,
         "persistent": true
      },
      "clean": {
         "cache": false
      }
   }
}
